---
const { title, variant } = Astro.props;
import { Icon } from "astro-icon/components";
import "../styles/global.css"
---

<article data-variant={variant}>
  <Icon name="folder" />
  <h3>{title}</h3>
  <p>Lorem ipsum dolor sit amet consectetur.</p>
  <a href="#">Read More</a>
</article>

<style>
  article {
    background: #fff;
    padding: 1rem;
    border-radius: 1.25rem;

  }

  [data-variant="original"] {
    background: #fff;
    color: #000;
  }

  [data-variant="primary"] {
    background: lightgreen;
    color: #000;
  }

  [data-variant="secondary"] {
    background: blue;
    color: #fff;
  }

  [data-icon="folder"] {
    width: 3.29863rem;
    height: 3.29863rem;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 1.375rem;
    margin-bottom: 1.375rem;
  }

  [data-icon="barChart"] {
    width: 3.29863rem;
    height: 3.29863rem;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 1.375rem;
    margin-bottom: 1.375rem;
  }

  [data-icon="globe"] {
    width: 3.29863rem;
    height: 3.29863rem;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 1.375rem;
    margin-bottom: 1.375rem;
  }

  [data-icon="settings"] {
    width: 3.29863rem;
    height: 3.29863rem;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 1.375rem;
    margin-bottom: 1.375rem;
  }
</style>
