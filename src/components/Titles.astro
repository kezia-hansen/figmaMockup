---
import "../styles/global.css";
const { title, text, variant } = Astro.props;
---

<header>
  <div data-variant={variant}>
    <h3>{title}</h3>
    <p>{text}</p>
  </div>
</header>

<style>
  header {
    display: flex;
    width: 36.75rem;
    flex-direction: column;
    align-items: flex-start;
    gap: 0.6875rem;
    flex-shrink: 0;
  }

  h3 {
    font-size: 2.8125rem;
    font-weight: 700;
    line-height: 3.2625rem;
  }

  [data-variant="white"] {
    color: #fff;
  }
</style>
