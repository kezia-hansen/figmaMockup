---
import "../styles/global.css";
import Base from "../layouts/Base.astro";
import Columns from "../components/Columns.astro";
import HeroImage from "../components/HeroImage.astro";
import Card from "../components/Card.astro";
import TeamCard from "../components/TeamCard.astro";
import HeadingPill from "../components/HeadingPill.astro";
import Button from "../components/Button.astro";
import Titles from "../components/Titles.astro";
import Checkmark from "../components/Checkmark.astro";
import Numbers from "../components/Numbers.astro";
import Video from "../components/Video.astro";
---

<Base>
  <div class="containerabout">
    <img src="../images/about-hero.jpg" alt="heroimage" class="imghero" />

    <div class="services">
      <HeadingPill variant="yellow" title="services" />
      <Titles title="Creative Services For Boost Your Business Growth" tekst="" />
    </div>
  </div>
  <section class="firstflex">
    <div>
      <Columns cols="3">
        <HeadingPill variant="green" title="Our Vision" />
      </Columns>
      <Titles title="Turn your ideas into reality." text="Capitalize on low hanging fruit to identify a ballpark value added activity beta test. Override the digital divide with additional from DevOps." />
      <Checkmark />
    </div>
    <div>
      <figure>
        <img src="./images/imgpattern.jpg" alt="" class="h2img" />
      </figure>
    </div>
  </section>
  <Numbers />

  <section class="full">
    <div>
      <Columns cols="3">
        <HeadingPill title="Growing with our Clients" variant="yellow" />
      </Columns>
      <div class="secbutton">
        <Titles title="Our core values & principles" text="Capitalize on low hanging fruit to identify a ballpark value added activity beta test. Override the digital divide with additional from DevOps." />
        <Button title="Get in touch" />
      </div>
    </div>
    <Columns cols="4">
      <Card title="Creative Ideas" variant="original" />
      <Card title="Best Features" variant="original" />
      <Card title="Experience" variant="original" />
      <Card title="Easy Solutions" variant="original" />
    </Columns>
  </section>
  <section>
    <div class="centered">
      <HeadingPill title="Our history" variant="green" />

      <Titles title="Better Website Means A User Experience" text="Ippsum is the result of synergy between our teams and our customers. Our company culture is focused on excellent productivity, customer satisfaction, respect for team and individual achievements." />
    </div>
    <Video />
  </section>
  <section class="full">
    <div>
      <Columns cols="6">
        <HeadingPill title="our team" variant="yellow" />
      </Columns>
      <div class="secbutton">
        <Titles title="We champion the bold to achieve the extraordinary" text="Ippsum is the result of synergy between our teams and our customers. Our company culture is focused on excellent productivity, customer satisfaction, respect for team." />
      </div>
    </div>
    <Columns cols="3">
      <TeamCard img="../images/sarah.jpg" position=" CEO at Company" variant="yellow" name="Sarah Jasmine" text="Leverage agile frameworks to provide a robust synopsis for high level overviews." />
      <TeamCard img="../images/john.jpg" position="Manager" variant="black" name="John Carter" text="Leverage agile frameworks to provide a robust synopsis for high level overviews." />
      <TeamCard img="../images/daisy.jpg" position="CEO at Company" variant="black" name="Daisy Stella" text="Leverage agile frameworks to provide a robust synopsis for high level overviews." />
    </Columns>
  </section>
  <section>
    <img src="../images/ctabox.jpg" alt="temporary" />
  </section>
</Base>

<style>
  .firstflex {
    display: flex;
    flex-flow: row;
    padding: 3rem;
  }
  .secbutton {
    display: flex;

    width: 74.875rem;
    align-items: flex-end;
    gap: 22rem;
  }
  section {
    padding: 6.25rem;
    display: grid;
    grid:
      auto /
      [full-start] 1fr
      [content] minmax(0, var(--content-width))
      1fr [full-end];
    gap: 6rem 4rem;

    > * {
      grid-column: content;
    }

    .full {
      grid-column: full;
    }
  }

  .full {
    background: #f5f5f5;
  }

  figure {
    width: 400px;
    height: auto;
    position: relative;

    &::before {
      --square-count: 10;
      z-index: -1;
      content: "";
      position: absolute;
      inset: -50px -50px auto auto;
      inline-size: calc(var(--square-count) * 1.34rem - 0.67rem);
      aspect-ratio: 1;
      background: linear-gradient(135deg, #be965d, #976f40, #c99b61, #f0be7b, #ffcb85, #eebc79, #c0935b, #976f40) 0 0 / 100% 100%;
      mask:
        var(--square-pattern) 0 0 / 1.34rem 1.34rem,
        var(--square-pattern) 0.67rem 0.67rem / 1.34rem 1.34rem;
    }

    &::after {
      content: "";
      position: absolute;
      right: -1rem;
      top: -1rem;
      background: green;
      width: 150px;
      height: 100px;
      border-radius: 10px;
      z-index: -1;
    }
  }

  .h2img {
    border-radius: 1.2rem;
  }

  .centered {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.6875rem;
    text-align: center;
  }

  .containerabout {
    display: grid;
    place-items: center;
  }
  .imghero {
    width: 153%;
    height: 100%;
  }
  .imghero,
  .services {
    grid-area: 1 / 1;
  }
  .services {
    padding: 3rem 3.75rem 3.625rem 3.75rem;
    border-radius: 1.8125rem;
    background: rgba(255, 255, 255, 0.85);

    backdrop-filter: blur(5.5px);
    display: inline-flex;

    flex-direction: column;
    align-items: flex-start;
    gap: 0.625rem;
  }
</style>
